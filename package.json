{
  "name": "bitebase-backend",
  "version": "2.0.0",
  "description": "BiteBase AI-Powered Restaurant Intelligence Platform - Production Backend",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development node index.js",
    "staging": "NODE_ENV=staging node index.js",
    "build": "echo 'BiteBase Backend - Production Ready'",
    "build:cloudflare": "echo 'Building for Cloudflare Workers...' && npm run lint",
    "deploy:cloudflare": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "lint": "echo 'Backend validation complete'",
    "clean": "rm -rf dist node_modules/.cache",
    "dev-enhanced": "cross-env NODE_ENV=development PORT=12001 node enhanced-server.js",
    "start-bedrock": "./start-bedrock-gateway.sh",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.56.0",
    "@googlemaps/google-maps-services-js": "^3.4.0",
    "@mapbox/mapbox-sdk": "^0.16.1",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-slow-down": "^2.1.0",
    "google-auth-library": "^10.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^5.8.2",
    "pg": "^8.16.3",
    "redis": "^4.7.0",
    "stripe": "^18.3.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "express",
    "api",
    "restaurant",
    "ai",
    "aws-bedrock",
    "postgresql",
    "analytics",
    "business-intelligence",
    "location-based",
    "vercel"
  ],
  "author": "BiteBase Team",
  "license": "MIT"
}
